{
  "name": "functional-game-engine-template",
  "version": "1.0.0",
  "description": "",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "lerna run start --scope=game --stream --no-prefix",
    "build": "lerna run build --scope=game --stream --no-prefix",
    "deploy": "lerna run deploy --scope=game --stream --no-prefix",
    "lint": "eslint .",
    "format": "prettier-eslint --write \"**/*.js\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn lint && yarn build && yarn deploy"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "7.9.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.8.3",
    "@babel/preset-env": "^7.9.5",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "husky": "^4.2.5",
    "indent-string": "^4.0.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.1.3",
    "prettier-eslint-cli": "^5.0.0"
  },
  "keywords": [],
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "git add ."
    ]
  }
}
